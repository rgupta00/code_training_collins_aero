//			
//			System.out.println(it.next());
//		}
		
		//is it possible to delete while iterating the collection?
		
//		Iterator<String> it=list.iterator();
//		while(it.hasNext()){
//			String data=it.next();
//				if(data.equals("foo"))
//			it.remove();
//		}
//		System.out.println(list);
		
		//Sorting?
		
		
