package com.day6.threads.c.java5_juc.threadsafe_collection;

import java.util.Random;
import java.util.concurrent.ArrayBlockingQueue;
import java.util.concurrent.BlockingQueue;

public class C_PCUsingBLQ {

	static BlockingQueue<Integer> queue = new ArrayBlockingQueue<>(10);

	public static void main(String[] args) {

		Thread t1 = new Thread(new Runnable() {
			@Override
			public void run() {
				try {
					produce();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			}
		});

		Thread t2 = new Thread(new Runnable() {
			@Override
			public void run() {
				try {
					consume();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			}
		});

	}

	static void consume() throws InterruptedException {
		while (true) {
			Thread.sleep(100);
			Integer value = queue.take();
			System.out.println("taken: " + value + " size : " + queue.size());
		}
	}

	static void produce() throws InterruptedException {
		Random r = new Random();
		while (true) {
			queue.put(r.nextInt(10));
		}
	}

}
